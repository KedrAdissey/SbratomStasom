<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#646363" />
            <gradient android:angle="180" android:endColor="#f0f4bf" android:startColor="#dcffdb" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="3dip" android:color="#646363" />
            <gradient android:angle="180" android:endColor="#f9d5d5" android:startColor="#e2f4e2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="#646363" />
            <gradient android:angle="180" android:endColor="#9f9e9e" android:startColor="#9c9897" />
        </shape>
    </item>
</selector>
